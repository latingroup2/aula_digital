<div class="page-header">
  <h1>
    Materia
    <a href="/materia/new" class="btn btn-lg btn-success">New Materium</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @materia.each do |materium| %>
      <tr>
        <td><%= materium.description %></td>
        <td>
          <a href="/materia/<%= materium.id %>" class="btn btn-primary">Show</a>
          <a href="/materia/<%= materium.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_materium/<%= materium.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @materia, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
