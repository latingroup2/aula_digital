<div class="page-header">
  <h3>Nivel #<%= @nivel.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Intended year</dt>
      <dd><%= @nivel.intended_year %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/nivels" class="btn btn-primary">
        Back
      </a>
      <a href="/nivels/<%= @nivel.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_nivel/<%= @nivel.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Nivel has many objetivos -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Objetivos
      </li>

      <% @nivel.objetivos.each do |objetivo| %>
        <li class="list-group-item">
          <a href="/objetivos/<%= objetivo.id %>">
            <%= objetivo.description %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/objetivos/<%= objetivo.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/objetivos/<%= objetivo.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_objetivo/<%= objetivo.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_objetivo" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for pre_objetivo_id -->
      <div class="form-group">
        <label for="pre_objetivo_id" class="control-label">
          Pre objetivo
        </label>

        <input type="text" id="pre_objetivo_id" name="pre_objetivo_id" placeholder="Pre objetivo" class="form-control" value="">
      </div>

      <!-- Label and input for next_objetivo_id -->
      <div class="form-group">
        <label for="next_objetivo_id" class="control-label">
          Next objetivo
        </label>

        <input type="text" id="next_objetivo_id" name="next_objetivo_id" placeholder="Next objetivo" class="form-control" value="">
      </div>

      <!-- Label and input for eje_id -->
      <div class="form-group">
        <label for="eje_id" class="control-label">
          Eje
        </label>

        <%= select_tag(:eje_id, options_from_collection_for_select(Eje.all, :id, :description), :class => "form-control") %>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for nivel_id -->
      <input type="hidden" name="nivel_id" value="<%= @nivel.id %>">

      <button class="btn btn-block btn-success">
        Create Objetivo
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Nivel has many classrooms -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Classrooms
      </li>

      <% @nivel.classrooms.each do |classroom| %>
        <li class="list-group-item">
          <a href="/classrooms/<%= classroom.id %>">
            <%= classroom.nivel_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/classrooms/<%= classroom.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/classrooms/<%= classroom.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_classroom/<%= classroom.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_classroom" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for nivel_id -->
      <input type="hidden" name="nivel_id" value="<%= @nivel.id %>">

      <button class="btn btn-block btn-success">
        Create Classroom
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
